{
	"name": "__MSG_extTitle__",
	"version": "2.0.0",
	"manifest_version": 2,

	"description": "__MSG_extDesc__",
	"default_locale": "en",
	"icons": {
		"128": "img/icon-128.png",
		"16": "img/icon-128.png",
		"48": "img/icon-128.png"
	},
	"author": "Jacob „kurtextrem\" Groß",

	"content_scripts": [{
		"matches": [
			"*://*.instagram.com/",
			"*://instagram.com/"
		],
		"js": ["content/InstagramAPI.js", "content/main.js"],
		"css": ["content/content.css"],
		"run_at": "document_end",
		"all_frames": true
	}, {
		"matches": [
			"*://*.instagram.com/p/*",
			"*://instagram.com/p/*"
		],
		"js": ["content/InstagramAPI.js", "content/main.js"],
		"css": ["content/single.css"],
		"run_at": "document_idle",
		"all_frames": true
	}],
	"background": {
		"scripts": ["content/background.js"],
		"persistent": false
	},
	"options_page": "index.html",
	"minimum_chrome_version": "49",

	"permissions": [
		"*://*.instagram.com/*",
		"*://instagram.com/*",
		"storage"
	],
	"content_security_policy": "script-src 'self' http://localhost:8080; object-src 'self'"
}
{
	"name": "__MSG_extTitle__",
	"version": "2.3.3.1",
	"manifest_version": 2,

	"description": "__MSG_extDesc__",
	"default_locale": "en",
	"icons": {
		"128": "img/icon-128.png",
		"16": "img/icon-128.png",
		"48": "img/icon-128.png"
	},
	"author": "Jacob „kurtextrem\" Groß",

	"content_scripts": [{
		"matches": [
			"*://*.instagram.com/*",
			"*://instagram.com/*"
		],
		"js": ["content/InstagramApi.js", "content/main.js"],
		"css": ["content/content.css"],
		"run_at": "document_idle",
		"all_frames": true
	}],
	"background": {
		"scripts": ["content/background.js"],
		"persistent": true
	},
	"options_page": "index.html",
	"minimum_chrome_version": "55",

	"permissions": [
		"*://*.instagram.com/*",
		"*://instagram.com/*",
		"storage",
		"webRequest",
		"webRequestBlocking",
		"cookies"
	],
	"content_security_policy": "script-src 'self' http://localhost:8080; object-src 'self'"
}
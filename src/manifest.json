{
	"name": "Instagram™ Extended",
	"version": "1.0.8",
	"manifest_version": 2,

	"description": "__MSG_extDesc__",
	"default_locale": "en",
	"icons": {
		"128": "img/icon-128.png",
		"16": "img/icon-128.png",
		"48": "img/icon-128.png"
	},
	"author": "Jacob „kurtextrem\" Groß",

	"content_scripts": [{
		"matches": [
			"*://*.instagram.com/",
			"*://instagram.com/"
		],
		"js": ["main.js"],
		"css": ["content.css"],
		"run_at": "document_end",
		"all_frames": true
	},{
		"matches": [
			"*://*.instagram.com/p/*",
			"*://instagram.com/p/*"
		],
		"js": ["main.js"],
		"css": ["single.css"],
		"run_at": "document_idle",
		"all_frames": true
	}],
	"minimum_chrome_version": "33",

	"permissions": [
		"*://*.instagram.com/*",
		"*://instagram.com/*"
	]
}
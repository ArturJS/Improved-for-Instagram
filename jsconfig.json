{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "preserve",
		"experimentalDecorators": true,
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"**/*": ["**/*"]
		}
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*"]
}
